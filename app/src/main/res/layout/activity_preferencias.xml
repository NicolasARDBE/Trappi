<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preferencias"
    android:orientation="vertical">


    <Button
        android:id="@+id/FechaSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona\ntu fecha de salida"
        android:layout_alignTop="@+id/Title3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="60dp"
        android:backgroundTint="#747679"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/FechaSalidaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00/00/0000"
        android:layout_alignLeft="@+id/FechaSalida"
        android:layout_alignBottom="@+id/FechaSalida"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="250dp">

    </TextView>

    <Button
        android:id="@+id/FechaLlegada"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FechaSalida"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#747679"
        android:paddingHorizontal="50dp"
        android:text="Selecciona\ntu fecha de llegada" />

    <TextView
        android:id="@+id/FechaLlegadaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00/00/0000"
        android:layout_alignLeft="@+id/FechaLlegada"
        android:layout_alignBottom="@+id/FechaLlegada"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="250dp">

    </TextView>
    <Button
        android:id="@+id/Personas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona\ntu cantidad de personas"
        android:layout_alignTop="@+id/FechaLlegada"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="40dp"
        android:backgroundTint="#747679"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/PersonasText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00"
        android:layout_alignLeft="@+id/Personas"
        android:layout_alignBottom="@+id/Personas"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="275dp">

    </TextView>

    <Button
        android:id="@+id/Listo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listo"
        android:layout_alignTop="@+id/Refrescar"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4CAF50"
        android:layout_marginRight="25dp"
        />
    <Button
        android:id="@+id/Refrescar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refrescar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:paddingHorizontal="60dp"
        android:backgroundTint="#2196F3"
        android:layout_marginLeft="25dp"

        >

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona al menos 5 elementos"
        android:layout_alignTop="@+id/Personas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:alpha="0.5"
        >

    </TextView>

    <TextView
        android:id="@+id/Title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establece \ntus preferencias"
        android:layout_alignBottom="@+id/Title2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="35sp"
       />

    <TextView
        android:id="@+id/Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué te gusta hacer cuando viajas?"
        android:layout_alignBottom="@+id/Title3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="50dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/Title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu tipo de experiencia"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"

        />

    <GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignTop="@+id/Personas"
    android:layout_alignBottom="@+id/Refrescar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="70dp"
    android:columnCount="3"
    android:gravity="center"
    android:rowCount="3">

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 1"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 2"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 3"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 4"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 5"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 6"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 7"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 8"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Botón 9"
        android:backgroundTint="#747679"
        android:textSize="10dp"/>

</GridLayout>
</RelativeLayout>